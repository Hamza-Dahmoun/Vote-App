@model WebApplication1.Models.State

@{
    ViewData["Title"] = "Create";
    var BusinessMsgType = ViewBag.BusinessMsgType;
    var BusinessMsgText = ViewBag.BusinessMsgText;
}
@*IN THIS VOEW WE'ARE GOING TO DISPLAY FEW INPUTS RELATED TO STATE *@
<h1>Create</h1>

<h4>State</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col-md-12">
        @if (BusinessMsgType != null)
        {
            @if (BusinessMsgType == "Error")
            {
                <p class="text-danger">@BusinessMsgText</p>
            }
            else if (BusinessMsgType == "Warning")
            {
                <p class="text-warning">@BusinessMsgText</p>
            }
            else if (BusinessMsgType == "Success")
            {
                <p class="text-success">@BusinessMsgText</p>
            }
        }
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
<partial name="_jQuery" />
<partial name="_jQueryValidationScripts" />

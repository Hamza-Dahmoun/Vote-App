@model IEnumerable<WebApplication1.Models.ViewModels.ElectionViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DurationInDays)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HasNeutral)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfCandidates)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfVoters)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <th>
                @Html.DisplayFor(model => item.Name)
            </th>
            <th>
                @Html.DisplayFor(model => item.StartDate)
            </th>
            <th>
                @Html.DisplayFor(model => item.DurationInDays)
            </th>
            <th>
                @Html.DisplayFor(model => item.HasNeutral)
            </th>
            <th>
                @Html.DisplayFor(model => item.NumberOfCandidates)
            </th>
            <th>
                @Html.DisplayFor(model => item.NumberOfVoters)
            </th>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>

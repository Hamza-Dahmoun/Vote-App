@model IEnumerable<WebApplication1.Models.ViewModels.PersonViewModel>

@{
    ViewData["Title"] = "GoToVotersList";
}

<h1>Voters List</h1>
<p>Select New Candidates from voters list below...</p>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StructureName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StructureLevel)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StructureName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StructureLevel)
            </td>
           
            <td>
                @if(!item.IsCandidate) {
                <a asp-action="SelectNewCandidate" asp-route-voterId="@item.Id">Select as Candidate</a>
                    }
            </td>
        </tr>
}
    </tbody>
</table>
